<h3>Profile</h3>
<blockquote>
  <% if (logged_in? and current_user.id  == params[:id].to_i) %>
    <div style="float:right">
      <%= link_to 'Edit', :action => 'edit', :id => @member %>
    </div>
  <% end %>
  <p>
    <% if !File.exist?("#{RAILS_ROOT}/public/images/members/#{@member.id.to_s}.jpg") %>
      <%= image_tag '/images/members/default.jpg' %>
    <% else %>
      <%= image_tag "/images/members/#{@member.id.to_s}.jpg" %>
    <% end %>
   </p>

   <p>
     <b>Name:</b> <%= h @member.name %>
   </p>

   <% unless @member.feed_url.blank? %>
     <p>
       <b>Feed URL:</b> <%= link_to @member.feed_url, h(@member.feed_url) %>
     </p>
   <% end %>

   <% if false %><# FIXME show email addresses or not? %>
     <% unless @member.email.blank? %>
       <p>
         <b>Email:</b> <%= h(@member.email) %>
       </p>
     <% end %>
   <% end %>

   <% unless @member.irc_nick.blank? %>
     <p>
       <b>IRC nick:</b> <%= h(@member.irc_nick) %>
     </p>
   <% end %>

   <% unless @member.about.blank? %>
     <p>
       <b>About:</b>
       <br/>
       <%= textilize @member.about %>
     </p>
   <% end %>
</blockquote>
